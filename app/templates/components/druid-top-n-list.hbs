{{#md-card title=title}}
{{#md-card-content}}
<table>
  <thead>
    <th width='80%'></th>
    <th width='20%'></th>
  </thead>
  <tbody>
  {{#each content as |row|}}
    <tr {{action 'itemClicked' row}}>
        <td>
      {{#if row.label}}
        {{row.label}}
      {{else}}
        <span class="empty-val">(empty)</span>
      {{/if}}
      </td>
      <td class='right-align'>{{nice-number row.value}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>
{{/md-card-content}}
{{/md-card}}